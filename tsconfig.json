{
    "compilerOptions": {
        "module"                      : "commonjs",
        "target"                      : "es2017",
        "noImplicitAny"               : false,
        "moduleResolution"            : "node",
        "sourceMap"                   : true,
        "emitDecoratorMetadata"       : true,
        "experimentalDecorators"      : true,
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}